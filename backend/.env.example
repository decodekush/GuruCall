# Server Configuration
PORT=3000
NODE_ENV=development

# Groq API (LLM)
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Deepgram API (Speech-to-Text)
# Get your API key from: https://console.deepgram.com/
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# CAMB.AI API (Text-to-Speech)
# Get your API key from: https://studio.camb.ai/
CAMB_API_KEY=your_camb_api_key_here
CAMB_VOICE_ID=147320
# Models: mars-flash (fast), mars-pro (quality), mars-instruct (with instructions)
CAMB_SPEECH_MODEL=mars-flash

# Twilio Configuration (Optional - for phone calls)

# MongoDB Connection
# Local: mongodb://localhost:27017/gurucall
# Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/gurucall
MONGODB_URI=mongodb://localhost:27017/gurucall

# Base URL for public assets (update for production)
BASE_URL=http://localhost:3000
